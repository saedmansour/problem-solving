<link href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.css" rel="stylesheet">
<style>
	@import url(http://fonts.googleapis.com/css?family=open-sans|Dosis|Tauri|PT+Sans+Narrow|Patrick+Hand+SC|Sniglet|Gochi+Hand|Shadows+Into+Light|McLaren|Roboto|Roboto+Condensed);

	body {
		background-color: whitesmoke;
		font-family: 'Roboto','Open Sans', Helvetica, Arial, sans-serif;
	}
	#subject-logo {
		position: absolute;
		left: 60px;
		top: 25px;
		display: block;
	}

	#subject-logo img {
		width: 200px;
	}
	.image img {
		width: 50px;
		height: 50px;
		border-radius: 50%;
	}
	a {
		color: black;
		text-decoration: none;
font-size: 20px;
font-weight: normal;
	}
	#results {
		list-style: none;
		position: relative;
		margin:auto;
		width: 700px;
		margin-top: 20px;
		top: 60px;
	}
	#results li {
		position: relative;
		width: 100%;
		height: 100px;
		border-bottom: #BCB1B2 solid 1px;
	}

	#results li .image {
		position: absolute;
		right: 50px;
		top: 30px;
	}
	#results li .title {
		position: relative;
		top: 43px;
		left: 50px;
	}
	#recommended-message {
		color: #A34B52;
		font-size: 16px;
		text-align: center;
		margin-bottom: 40px;
		font-family: 'Gochi Hand', cursive;
	}
	#back-button:hover {
		opacity: 0.7;
	}
	#back-button {
		padding-bottom: 100px;	
	}
</style>

<body>


	<div id="subject-logo">
		<img src="<%= asset_path "wokami_startups.png" %>">
		<div style="text-align: center; color: #A34B52; font-size: 16px; font-family: Sniglet;"><%= @subject.name %></div>
	</div>

	<ul id="results">
		<div id="recommended-message">Recommended learning paths for you:</div>
		<% if @paths.empty? %>
			<div style="text-align: center;">Sorry, no results :(</div>
		<% end %>
		<% @paths.each do |path| %>
			<li>
				<div class="title"><a target="_blank" href="<%= path.url %>"><%= path.title %></a></div>
				<div class="image"><img src="<%= path.image %>" /></div>
			</li>
		<% end %>
		<div id="back-button" style="margin:auto; text-align:center; font-size: 1.3em; margin-top: 40px;"><a href="/" style="color: #BCB1B2; "><i class="fa fa-long-arrow-left"></i></a></div>
	</ul>


</body>