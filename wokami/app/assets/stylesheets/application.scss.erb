/***************************************************************/
/* Fonts */	

@import url(http://fonts.googleapis.com/css?family=Open+Sans:400,300,700);


/***************************************************************/
/* Main styling */	

body {
	background-color: whitesmoke;
	font-family: 'open sans';
}

a, a:hover {
	text-decoration: none;
}

body > form {
	background-color: white;
}

/***************************************************************/
/* Header Menu */	

header {
	position: fixed;
	top: 0px;
	left: 0px;
	width: 100%;
	height: 40px;
	background-color: rgba(255, 255, 255, 0.5);
	z-index : 999;
}

#logo img {
	height: 70px;
	position: relative;
	top: 5px;
	left: 15px;
	float: left;
}

#logo h1 {
	display: inline-block;
	position: relative;
	left: 60px;
	top: -5px;
	font-family: 'Open Sans', sans-serif;
	color: black;
	font-size: 14px;
}

#logoff {
	font-size: 1.5em;
	opacity: 0.4;
	color: black;
	position: absolute;
	right: 20px;
	top: 10px;
}